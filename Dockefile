# Use a lightweight official Python base image
FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Create working directory
WORKDIR /app

# Install system dependencies for psycopg2 and others
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install pip requirements
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install -r requirements.txt gunicorn uvicorn

# Copy project files
COPY . .

# Expose the port Gunicorn will run on
EXPOSE 8000

# Run collectstatic without input (override if needed)
RUN python manage.py collectstatic --no-input

# Start server with Gunicorn using ASGI (Uvicorn worker)
CMD ["gunicorn", "your_project_name.asgi:application", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]
